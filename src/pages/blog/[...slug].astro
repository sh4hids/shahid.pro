---
import { Calendar, Clock } from '@phosphor-icons/react';
import type { GetStaticPaths, InferGetStaticPropsType } from 'astro';
import { format } from 'date-fns';

import Comment from '@/components/Comment.astro';
import LinkButton from '@/components/LinkButton.astro';
import PageHeader from '@/components/PageHeader.astro';
import { getAllPosts } from '@/data/posts';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { BrandNames, generateSlug, replaceAll } from '@/utils/string-helper';

export const getStaticPaths = (async () => {
    const blogEntries = await getAllPosts();
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { entry } = Astro.props;
const { Content, remarkPluginFrontmatter } = await entry.render();
const socialImage = `/og-image/${entry.slug}.png`;
---

<BaseLayout
    meta={{
        title: entry.data.title,
        description: entry.data.metaInfo.description,
        ogImage: socialImage,
    }}
>
    <PageHeader
        title={entry.data.title}
        breadcrumbItems={[
            {
                url: '/',
                label: 'Home',
            },
            {
                url: '/blog',
                label: 'Blog',
            },
        ]}
    >
        <div class="text-fg-2 flex gap-4 pt-4 md:gap-6">
            <div class="flex items-center gap-2">
                <Calendar className="h-4 w-4" />
                {format(entry.data.publishedAt, 'MMMM dd, yyyy')}
            </div>
            <div class="flex items-center gap-2">
                <Clock className="h-4 w-4" />
                {remarkPluginFrontmatter.minutesRead}
            </div>
        </div>
    </PageHeader>

    <div class="mx-auto px-4 md:max-w-2xl lg:max-w-3xl">
        <section
            class="prose prose-h2:text-fg-1 prose-p:text-fg-1 prose-a:text-fg-1 prose-a:underline prose-a:decoration-fg-2/60 prose-a:decoration-dashed prose-a:decoration-2 prose-a:underline-offset-8 max-w-none pt-6"
            data-pagefind-body
        >
            <Content />
        </section>
        <section
            class="mt-8 flex flex-row justify-center gap-4 border-t border-dashed pt-8"
        >
            {
                entry.data.tags?.length &&
                    entry.data.tags.map((tag) => (
                        <LinkButton
                            label={replaceAll(tag, BrandNames)}
                            url={`/tags/${generateSlug(tag)}`}
                        />
                    ))
            }
        </section>
        <section>
            <Comment />
        </section>
    </div>
</BaseLayout>
