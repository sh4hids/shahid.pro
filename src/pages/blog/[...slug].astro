---
import { Calendar, Clock } from '@phosphor-icons/react';
import type { GetStaticPaths, InferGetStaticPropsType } from 'astro';
import { format } from 'date-fns';

import PageHeader from '@/components/PageHeader.astro';
import { getAllPosts } from '@/data/posts';
import BaseLayout from '@/layouts/BaseLayout.astro';

export const getStaticPaths = (async () => {
    const blogEntries = await getAllPosts();
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { entry } = Astro.props;
const { Content, remarkPluginFrontmatter } = await entry.render();
const socialImage = `/og-image/${entry.slug}.png`;
---

<BaseLayout
    meta={{
        title: entry.data.title,
        description: entry.data.metaInfo.description,
        ogImage: socialImage,
    }}
>
    <PageHeader
        title={entry.data.title}
        breadcrumbItems={[
            {
                url: '/',
                label: 'Home',
            },
            {
                url: '/blog',
                label: 'Blog',
            },
        ]}
    >
        <div class="flex gap-6 pt-4 text-fg-2">
            <div class="flex items-center gap-2">
                <Calendar className="h-4 w-4" />
                {format(entry.data.publishedAt, 'MMMM dd, yyyy')}
            </div>
            <div class="flex items-center gap-2">
                <Clock className="h-4 w-4" />
                {remarkPluginFrontmatter.minutesRead}
            </div>
        </div>
    </PageHeader>

    <div class="mx-auto max-w-3xl">
        <section
            class="prose max-w-none pt-6 prose-h2:text-fg-1 prose-p:text-fg-1
      prose-a:text-fg-1"
        >
            <Content />
        </section>
    </div>
</BaseLayout>
