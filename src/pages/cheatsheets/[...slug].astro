---
import { CalendarIcon, ClockIcon } from '@phosphor-icons/react';
import type { GetStaticPaths, InferGetStaticPropsType } from 'astro';
import { format } from 'date-fns';

import PageHeader from '@/components/PageHeader.astro';
import { getAllCheatsheets } from '@/data';
import BaseLayout from '@/layouts/BaseLayout.astro';

export const getStaticPaths = (async () => {
    const entries = await getAllCheatsheets();
    return entries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { entry } = Astro.props;
const { Content, remarkPluginFrontmatter } = await entry.render();
const socialImage = `/og-image/${entry.slug}.png`;
---

<BaseLayout
    meta={{
        title: entry.data.title,
        description: entry.data.description,
        ogImage: socialImage,
    }}
>
    <PageHeader
        title={entry.data.title}
        breadcrumbItems={[
            {
                url: '/',
                label: 'Home',
            },
            {
                url: '/cheatsheets',
                label: 'Cheatsheets',
            },
        ]}
    >
        <div class="text-fg-2 flex gap-4 pt-4 md:gap-6">
            <div class="flex items-center gap-2">
                <CalendarIcon className="h-4 w-4" />
                {format(entry.data.publishedAt, 'MMMM dd, yyyy')}
            </div>
            <div class="flex items-center gap-2">
                <ClockIcon className="h-4 w-4" />
                {remarkPluginFrontmatter.minutesRead}
            </div>
        </div>
    </PageHeader>

    <div class="mx-auto px-4 md:max-w-2xl lg:max-w-3xl">
        <section
            class="prose prose-h2:text-fg-1 prose-p:text-fg-1 prose-a:text-fg-1 prose-a:underline prose-a:decoration-fg-2/60 prose-a:decoration-dashed prose-a:decoration-2 prose-a:underline-offset-8 max-w-none pt-6"
            data-pagefind-body
        >
            <Content />
        </section>
    </div>
</BaseLayout>
