---
interface Props {
    label: string;
    url: string;
    disabled?: boolean;
    target?: '_blank' | '_self' | '_parent' | '_top';
}

const { label, url, target, disabled } = Astro.props;
---

<a
    href={url}
    target={target}
    rel="noopener noreferrer"
    class={`inline-block rounded-md border  px-3 py-1 ${disabled ? 'pointer-events-none bg-surface-2 opacity-70 text-zinc-100' : 'bg-surface-2 text-zinc-100'} no-underline duration-300 ease-in-out hover:border-primary hover:bg-primary hover:text-zinc-100`}
>
    <span>{label}</span>
    <slot />
</a>
