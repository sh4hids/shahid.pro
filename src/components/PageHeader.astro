---
import Breadcrumb from '@/components/Breadcrumb.astro';
import Text from '@/components/Text.astro';
import { type BreadcrumbItem } from '@/components/types';

interface Props {
    title: string;
    breadcrumbItems: BreadcrumbItem[];
}

const { title, breadcrumbItems } = Astro.props;
---

<div class="border-b bg-surface-1/10 px-4 py-6 md:py-12 lg:px-0">
    <div class="mx-auto md:max-w-2xl md:px-4 lg:max-w-3xl">
        <Breadcrumb items={breadcrumbItems} />
        <Text
            variant="h2"
            class="text-2xl leading-tight md:text-3xl md:leading-snug"
        >
            {title}
        </Text>
        <slot />
    </div>
</div>
