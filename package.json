{
    "name": "shahid.pro",
    "type": "module",
    "version": "0.0.1",
    "packageManager": "pnpm@9.10.0",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro check && astro build",
